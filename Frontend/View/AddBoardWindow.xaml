<Window x:Class="Frontend.View.AddBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Frontend.View"
        Title="Add Board"
        Height="220" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Board Name :"
                       Foreground="White"
                       FontSize="14"
                       Margin="0,0,0,5"/>

            <Border Background="#FF3F3F3F"
                    CornerRadius="10"
                    BorderBrush="#FF5F5F5F"
                    BorderThickness="1"
                    Margin="0,0,0,10">
                <TextBox x:Name="BoardNameBox"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    Padding="10,6"
                    FontSize="14"
                    Height="30"
                    Text="{Binding BoardName, Mode=OneWayToSource}"/>
            </Border>

            <!-- Error message -->
            <TextBlock Text="{Binding ErrorMessage, Mode=OneWay}"
                       Foreground="#FFFF5252"
                       FontSize="12"
                       Margin="0,0,0,10"/>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Cancel Button -->
                <Border Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="#FFFF5252"
                        BorderThickness="2"
                        CornerRadius="10"
                        Width="80">
                    <Button Content="Cancel"
                            Background="Transparent"
                            Foreground="#FFFF5252"
                            BorderThickness="0"
                            Padding="8,4"
                            FontSize="14"
                            Cursor="Hand"
                            Click="Cancel_Click"/>
                </Border>

                <!-- Create Button -->
                <Border Grid.Column="3"
                        Background="#FF4CAF50"
                        CornerRadius="10"
                        Width="80">
                    <Button Content="Create"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="8,4"
                            FontSize="14"
                            Cursor="Hand"
                            Click="Create_Click"
                            IsDefault="True"/>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
